%nav.navbar.navbar-default.navbar-static-top{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{'data-target': '#nav', 'data-toggle': 'collapse', type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to 'Assisted', root_path, class: 'navbar-brand'

    #nav.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Caregiver', '#'
        %li= link_to 'Find a Care', '#'
        - if user_signed_in?
          %li.dropdown
            %a{'data-toggle': 'dropdown', href: '#', class: 'dropdown-toggle'}
              = current_user.id
              %span{class: 'caret'}
            %ul{class: 'dropdown-menu', role: 'menu'}
              %li= link_to 'Profile', users_account_path(current_user)
              %li= link_to 'Log out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Log In', new_user_session_path
          %li= link_to 'Sign Up', new_user_registration_path




